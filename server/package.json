{
  "name": "chaosarchives",
  "version": "0.1.0",
  "description": "The prototype of the RP portal for the Chaos EU datacenter in FFXIV",
  "author": "Maia Everett <maia@everett.one>",
  "private": true,
  "license": "AGPL-3.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/chaosarchives/test/jest-e2e.json",
    "docker:build": "docker build -t chaosarchives .",
    "docker:deploy": "docker-compose up -d"
  },
  "dependencies": {
    "@nestjs-modules/ioredis": "^1.0.1",
    "@nestjs-modules/mailer": "^1.8.1",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/common": "^9.4.3",
    "@nestjs/core": "^9.4.3",
    "@nestjs/event-emitter": "^1.4.2",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.4.3",
    "@nestjs/platform-socket.io": "^9.4.3",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/typeorm": "^9.0.1",
    "@nestjs/websockets": "^9.4.3",
    "@types/aws-sdk": "^2.7.0",
    "@xivapi/js": "^0.3.3",
    "aws-sdk": "^2.1004.0",
    "axios": "^1.4.0",
    "bcrypt": "^5.0.1",
    "bl": "^5.0.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "config": "^3.3.6",
    "@discord-nestjs/core": "^5.3.7",
    "discord.js": "^14.11.0",
    "escape-html": "^1.0.3",
    "handlebars": "^4.7.7",
    "html-entities": "^2.3.2",
    "html-to-text": "^8.2.0",
    "ioredis": "^4.27.8",
    "jpegtran": "^2.0.0",
    "jsdom": "^17.0.0",
    "lodash": "^4.17.21",
    "luxon": "^2.0.2",
    "mysql": "^2.18.1",
    "node-html-markdown": "^1.1.3",
    "node-html-parser": "^4.1.3",
    "node-schedule": "^2.1.0",
    "nodemailer": "^6.6.3",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rfc4648": "^1.5.0",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "sanitize-html": "^2.5.1",
    "sharp": "^0.29.1",
    "slugify": "^1.6.5",
    "socket.io": "^4.5.2",
    "swagger-ui-express": "^4.6.3",
    "typeorm": "^0.3.16"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.5.0",
    "@nestjs/schematics": "^9.2.0",
    "@nestjs/testing": "^9.4.3",
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^5.0.0",
    "@types/bl": "^5.0.1",
    "@types/config": "^0.0.38",
    "@types/escape-html": "^1.0.1",
    "@types/express": "^4.17.11",
    "@types/html-to-text": "^8.1.0",
    "@types/ioredis": "^4.26.7",
    "@types/jest": "26.0.20",
    "@types/jsdom": "^16.2.13",
    "@types/luxon": "^2.0.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^14.14.31",
    "@types/node-schedule": "^1.3.2",
    "@types/nodemailer": "^6.4.4",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/sanitize-html": "^2.3.2",
    "@types/sharp": "^0.29.2",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "4.16.1",
    "@typescript-eslint/parser": "4.16.1",
    "eslint": "7.21.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "26.5.3",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.2",
    "yarn-audit-fix": "^9.3.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@app/configuration/(.*)": "<rootDir>/libs/configuration/src/$1",
      "@app/configuration": "<rootDir>/libs/configuration/src",
      "@app/entity/(.*)": "<rootDir>/libs/entity/src/$1",
      "@app/entity": "<rootDir>/libs/entity/src",
      "@app/shared/(.*)": "<rootDir>/libs/shared/src/$1",
      "@app/shared": "<rootDir>/libs/shared/src",
      "@app/security/(.*)": "<rootDir>/libs/security/src/$1",
      "@app/security": "<rootDir>/libs/security/src"
    }
  }
}
