{
  "name": "chaosarchives",
  "version": "0.1.0",
  "description": "The prototype of the RP portal for the Chaos EU datacenter in FFXIV",
  "author": "Maia Everett <maia@everett.one>",
  "private": true,
  "license": "AGPL-3.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/chaosarchives/test/jest-e2e.json",
    "docker:build": "docker build -t chaosarchives ."
  },
  "dependencies": {
    "@nestjs-modules/ioredis": "^1.0.0",
    "@nestjs-modules/mailer": "^1.6.0",
    "@nestjs/common": "^7.6.13",
    "@nestjs/core": "^7.6.13",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-express": "^7.6.13",
    "@nestjs/typeorm": "^7.1.5",
    "@xivapi/js": "^0.3.3",
    "bcrypt": "^5.0.1",
    "class-validator": "^0.13.1",
    "config": "^3.3.6",
    "handlebars": "^4.7.7",
    "ioredis": "^4.27.8",
    "luxon": "^2.0.2",
    "mysql": "^2.18.1",
    "nest-transact": "^1.1.5",
    "node-html-parser": "^4.1.3",
    "nodemailer": "^6.6.3",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rfc4648": "^1.5.0",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
    "typeorm": "^0.2.32"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.6",
    "@nestjs/schematics": "^7.2.8",
    "@nestjs/testing": "^7.6.13",
    "@types/bcrypt": "^5.0.0",
    "@types/config": "^0.0.38",
    "@types/express": "^4.17.11",
    "@types/ioredis": "^4.26.7",
    "@types/jest": "26.0.20",
    "@types/luxon": "^2.0.0",
    "@types/node": "^14.14.31",
    "@types/nodemailer": "^6.4.4",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "4.16.1",
    "@typescript-eslint/parser": "4.16.1",
    "eslint": "7.21.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "26.5.3",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.2",
    "yarn-audit-fix": "^6.4.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@app/configuration/(.*)": "<rootDir>/libs/configuration/src/$1",
      "@app/configuration": "<rootDir>/libs/configuration/src",
      "@app/entity/(.*)": "<rootDir>/libs/entity/src/$1",
      "@app/entity": "<rootDir>/libs/entity/src",
      "@app/shared/(.*)": "<rootDir>/libs/shared/src/$1",
      "@app/shared": "<rootDir>/libs/shared/src"
    }
  }
}
