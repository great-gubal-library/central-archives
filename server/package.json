{
  "name": "chaosarchives",
  "version": "1.0.0",
  "description": "Roleplaying portal for the Chaos EU datacenter in FFXIV",
  "author": "Maia Everett <maia@everett.one>",
  "private": true,
  "license": "AGPL-3.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/chaosarchives/test/jest-e2e.json",
    "docker:build": "docker build -t chaosarchives .",
    "docker:deploy": "docker compose up -d"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.515.0",
    "@discord-nestjs/common": "^5.2.12",
    "@discord-nestjs/core": "^5.3.14",
    "@liaoliaots/nestjs-redis": "^9.0.5",
    "@nestjs-modules/mailer": "^1.10.3",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.3.3",
    "@nestjs/core": "^10.3.3",
    "@nestjs/event-emitter": "^2.0.4",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.3",
    "@nestjs/platform-socket.io": "^10.3.3",
    "@nestjs/schedule": "^4.0.1",
    "@nestjs/swagger": "^7.3.0",
    "@nestjs/typeorm": "^10.0.2",
    "@nestjs/websockets": "^10.3.3",
    "@xivapi/nodestone": "^0.2.6",
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "bl": "^6.0.11",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "config": "^3.3.11",
    "discord.js": "^14.14.1",
    "escape-html": "^1.0.3",
    "feed": "^4.2.2",
    "handlebars": "^4.7.8",
    "html-entities": "^2.4.0",
    "html-to-text": "^9.0.5",
    "ioredis": "^5.3.2",
    "jpegtran": "^2.0.0",
    "jsdom": "^24.0.0",
    "lodash": "^4.17.21",
    "luxon": "^3.4.4",
    "mysql": "^2.18.1",
    "node-html-markdown": "^1.3.0",
    "node-html-parser": "^6.1.12",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.10",
    "otpauth": "^9.2.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "qrcode": "^1.5.3",
    "reflect-metadata": "^0.2.1",
    "rfc4648": "^1.5.3",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "sanitize-html": "^2.12.1",
    "sharp": "0.32.6",
    "slugify": "^1.6.6",
    "socket.io": "^4.7.4",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.3",
    "@types/bcrypt": "^5.0.2",
    "@types/config": "^3.3.3",
    "@types/escape-html": "^1.0.4",
    "@types/express": "^4.17.21",
    "@types/html-to-text": "^9.0.4",
    "@types/jest": "^29.5.12",
    "@types/jsdom": "^21.1.6",
    "@types/luxon": "^3.4.2",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.19",
    "@types/node-schedule": "^2.1.6",
    "@types/nodemailer": "^6.4.14",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/qrcode": "^1.5.5",
    "@types/sanitize-html": "^2.11.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "yarn-audit-fix": "^10.0.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@app/configuration/(.*)": "<rootDir>/libs/configuration/src/$1",
      "@app/configuration": "<rootDir>/libs/configuration/src",
      "@app/entity/(.*)": "<rootDir>/libs/entity/src/$1",
      "@app/entity": "<rootDir>/libs/entity/src",
      "@app/shared/(.*)": "<rootDir>/libs/shared/src/$1",
      "@app/shared": "<rootDir>/libs/shared/src",
      "@app/security/(.*)": "<rootDir>/libs/security/src/$1",
      "@app/security": "<rootDir>/libs/security/src"
    }
  },
  "packageManager": "yarn@4.1.0"
}
