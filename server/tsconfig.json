{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "useDefineForClassFields": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "paths": {
      "jpegtran": [
        "types/jpegtran.d.ts"
      ],
      "@app/authentication": [
        "libs/authentication/src"
      ],
      "@app/authentication/*": [
        "libs/authentication/src/*"
      ],
      "@app/authorization": [
        "libs/authorization/src"
      ],
      "@app/authorization/*": [
        "libs/authorization/src/*"
      ],
      "@app/configuration": [
        "libs/configuration/src"
      ],
      "@app/configuration/*": [
        "libs/configuration/src/*"
      ],
      "@app/entity": [
        "libs/entity/src"
      ],
      "@app/entity/*": [
        "libs/entity/src/*"
      ],
      "@app/shared": [
        "libs/shared/src"
      ],
      "@app/shared/*": [
        "libs/shared/src/*"
      ],
      "@app/cryptography": [
        "libs/cryptography/src"
      ],
      "@app/cryptography/*": [
        "libs/cryptography/src/*"
      ]
    }
  }
}
